<div class="post-comments">
  <h2>Comments:</h2>
  {{#each this}}
  <section class="comment">
    <div class="comment-cred">
      <span>{{user.username}}</span> on <span>{{format_date created_at}}</span>
    </div>
    <div class="comment-text">
      {{comment_text}}
    </div>
    
    <div class="btn-row">
      <div>
        <button type="button" class="edit-comment-btn">edit</button>
      </div>
      <div>
        <button type="button" class="delete-comment-btn">delete</button>
      </div>
    </div>
    
  </section>
  {{/each}}
</div>
<script src="/javascript/login.js"></script>
<script src="/javascript/logout.js"></script>
<script src="/javascript/edit-comment"></script>
<script src="/javascript/delete-comment"></script>